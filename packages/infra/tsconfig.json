{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",
    "types": [
      "@types/node",
      "@types/jest",
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": "./src"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist", "cdk.out"]
}
